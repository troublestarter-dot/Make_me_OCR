# Google Service Account
GOOGLE_SERVICE_ACCOUNT_FILE=path/to/service-account.json
GOOGLE_SHEETS_ID=your-spreadsheet-id
GOOGLE_DRIVE_FOLDER_ID=your-drive-folder-id

# CloudConvert API
CLOUDCONVERT_API_KEY=your-cloudconvert-api-key

# OpenAI GPT
OPENAI_API_KEY=your-openai-api-key
OPENAI_MODEL=gpt-4

# Folder paths
INPUT_FOLDER=./data/input
OUTPUT_FOLDER=./data/processed
ORIGINALS_FOLDER=./data/originals
INDEX_FOLDER=./data/index

# Processing settings
MIN_PAGE_CONTENT_THRESHOLD=0.05
DUPLICATE_SIMILARITY_THRESHOLD=0.95
MAX_FILE_SIZE_MB=50

# Make.com webhook (optional)
MAKE_WEBHOOK_URL=https://hook.make.com/your-webhook-url

# Logging
LOG_LEVEL=INFO
LOG_FILE=./logs/ocr_factory.log
